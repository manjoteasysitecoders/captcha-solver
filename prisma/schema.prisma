generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  password  String
  credits   Int      @default(0)
  currentPlanId String?  
  currentPlan   Plan?    @relation(fields: [currentPlanId], references: [id])

  // Relations
  apiKeys    ApiKey[]
  requests   Request[]
}

model Plan {
  id          String  @id @default(cuid())
  name        String
  price       Int
  credits     Int
  description String?
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  lastUsedAt DateTime?
}

model Request {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  status    String
  credits   Int      @default(0)
  createdAt DateTime @default(now())
}
